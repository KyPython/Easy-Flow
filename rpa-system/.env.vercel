# EasyFlow Environment Configuration for Vercel
# Add these variables to Vercel Environment Variables section

# Application Configuration
NODE_ENV=production
APP_URL=https://your-app-name.vercel.app

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE=your-supabase-service-role-key
SUPABASE_BUCKET=artifacts
SUPABASE_PASSWORD=your-database-password
SUPABASE_USE_SIGNED_URLS=true
SUPABASE_SIGNED_URL_EXPIRES=86400
SUPABASE_JWT=your-jwt-secret
POSTGRES_URL=postgresql://postgres:[password]@db.your-project-id.supabase.co:5432/postgres

# Security Keys (Generate new ones for production)
API_KEY=your-secure-api-key-32-characters-minimum
ADMIN_API_SECRET=your-admin-secret-64-characters-minimum
SESSION_SECRET=your-session-secret-32-characters-minimum
CREDENTIAL_ENCRYPTION_KEY=your-encryption-key-32-characters

# External Services
DUCK_TOKEN=your-duckdns-token
POLAR_API_KEY=your-polar-api-key
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret
HUBSPOT_API_KEY=your-hubspot-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-verified-sender-email
SENDGRID_FROM_NAME=Your App Name
UCHAT_API_KEY=your-uchat-api-key

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com/

# Email Configuration
SEND_EMAIL_WEBHOOK=https://your-app-name.vercel.app/api/send-email-now
SEND_EMAIL_WEBHOOK_SECRET=your-webhook-secret
BACKEND_URL=https://your-app-name.vercel.app/api/email-webhook

# Frontend Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app-name.vercel.app
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX
MEASUREMENT_ID=G-XXXXXXXXXX

# Automation Services (if using)
AUTOMATION_URL=https://your-automation-service.vercel.app