# Production Environment Configuration for Render.com

# Backend API Service
NODE_ENV=production
PORT=3030

# Database Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_BUCKET=artifacts
SUPABASE_USE_SIGNED_URLS=true
SUPABASE_SIGNED_URL_EXPIRES=86400

# Firebase Configuration (Backend)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com/
FIREBASE_SERVICE_ACCOUNT_PATH=/opt/render/project/src/rpa-system/backend/config/firebase-service-account.json

# API Security
API_KEY=generate-secure-api-key-32-chars
ALLOWED_ORIGINS=https://easyflow-dashboard.vercel.app,https://app.easyflow.com

# Service Communication
AUTOMATION_URL=https://easyflow-automation.onrender.com/run
AUTOMATION_API_KEY=generate-automation-api-key

# Email Configuration
SEND_EMAIL_WEBHOOK=https://easyflow-backend.onrender.com/api/send-email-now
SEND_EMAIL_WEBHOOK_SECRET=generate-webhook-secret

# HubSpot Integration
HUBSPOT_ACCESS_TOKEN=your-hubspot-token

# Performance Tuning
FORWARD_BATCH_SIZE=20
FORWARD_FLUSH_MS=500
FORWARD_CONCURRENCY=6
FORWARD_MAX_RETRIES=6
FORWARD_RETRY_BASE_MS=300
FORWARD_ID_TTL_MS=3600000

# Monitoring
MEASUREMENT_ID=your-google-analytics-id
