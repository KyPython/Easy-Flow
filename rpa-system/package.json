{
  "name": "rpa-system",
  "private": true,
  "scripts": {
    "dev:backend": "node ./backend/index.js",
    "dev:automation": "python3 ./automation/automate.py",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:automation\"",
    "start": "node ./backend/index.js",
    "start:frontend": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "dotenv -- jest --config backend/jest.config.js",
    "test:backend:watch": "dotenv -- jest --config backend/jest.config.js --watch",
    "test:backend:coverage": "dotenv -- jest --config backend/jest.config.js --coverage",
    "test:performance": "dotenv -- jest --config backend/jest.config.js --testNamePattern='Performance'",
    "test:security": "dotenv -- jest --config backend/jest.config.js --testNamePattern='security|Security'",
    "test:integration": "dotenv -- jest --config backend/jest.config.js --testNamePattern='integration|Integration'",
    "eject": "react-scripts eject",
    "test:services": "dotenv concurrently --names \"BACKEND,WORKER,PROBE\" \"node backend/index.js\" \"cross-env SEND_EMAIL_WEBHOOK=http://localhost:4001/api/send-email-now node backend/workers/email_worker.js\" \"node backend/hooks_probe.js\"",
    "qa:run": "../scripts/run-qa-tests.sh",
    "qa:backend": "npm run test:backend && npm run test:performance && npm run test:security",
    "qa:full": "npm run qa:backend && cd rpa-dashboard && npm test -- --watchAll=false && cd ../automation && python3 -m pytest -v"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "@supabase/supabase-js": "^2.45.3",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "es-errors": "^1.3.0",
    "express": "^4.21.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "react-router-dom": "^7.8.2",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "react": "^19.1.1",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^19.1.1",
    "react-scripts": "^5.0.1",
    "supertest": "^6.3.4",
    "typescript": "^4.9.5"
  }
}