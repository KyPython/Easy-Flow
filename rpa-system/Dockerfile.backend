FROM node:20-alpine

# Install librdkafka for Kafka support
RUN apk add --no-cache librdkafka-dev

WORKDIR /workspace

# Copy package files and install production dependencies
COPY package*.json ./
RUN npm ci --omit=dev

# Copy the rest of the application code
COPY . .

EXPOSE 3030
CMD ["node", "backend/index.js"]