# ============================================
# Scraping & Lead Generation Configuration
# ============================================

# ============================================
# Proxy Provider Configuration
# ============================================
# Options: none, brightdata, oxylabs, smartproxy, custom
PROXY_PROVIDER=none

# Bright Data (Luminati) - if PROXY_PROVIDER=brightdata
BRIGHTDATA_USERNAME=
BRIGHTDATA_PASSWORD=
BRIGHTDATA_ENDPOINT=zproxy.lum-superproxy.io:22225
BRIGHTDATA_PROXY_TYPE=residential  # residential or datacenter
BRIGHTDATA_COUNTRY=us

# Oxylabs - if PROXY_PROVIDER=oxylabs
OXYLABS_USERNAME=
OXYLABS_PASSWORD=
OXYLABS_ENDPOINT=pr.oxylabs.io:7777
OXYLABS_PROXY_TYPE=residential
OXYLABS_COUNTRY=us

# Smartproxy - if PROXY_PROVIDER=smartproxy
SMARTPROXY_USERNAME=
SMARTPROXY_PASSWORD=
SMARTPROXY_ENDPOINT=gate.smartproxy.com:7000
SMARTPROXY_PROXY_TYPE=residential
SMARTPROXY_COUNTRY=us

# Custom Proxy List - if PROXY_PROVIDER=custom
# Format: host:port:username:password,host2:port2:username2:password2
CUSTOM_PROXY_LIST=

# Proxy Health Check Settings
PROXY_HEALTH_CHECK_INTERVAL=300000  # 5 minutes in milliseconds
PROXY_MAX_FAILURES=3
PROXY_HEALTH_CHECK_TIMEOUT=10000  # 10 seconds

# ============================================
# CAPTCHA Provider Configuration
# ============================================
# Options: none, 2captcha, anticaptcha
CAPTCHA_PROVIDER=none

# 2Captcha API Key - if CAPTCHA_PROVIDER=2captcha
# Get your API key from: https://2captcha.com/
CAPTCHA_API_KEY=

# AntiCaptcha API Key - if CAPTCHA_PROVIDER=anticaptcha
# Note: Uses same CAPTCHA_API_KEY variable
# Get your API key from: https://anti-captcha.com/

# ============================================
# Company Enrichment APIs
# ============================================
# Clearbit API Key
# Get your API key from: https://dashboard.clearbit.com/api
CLEARBIT_API_KEY=

# Company enrichment cache TTL (milliseconds, default: 24 hours)
COMPANY_ENRICHMENT_CACHE_TTL_MS=86400000

# ============================================
# Contact Enrichment APIs
# ============================================
# Hunter.io API Key
# Get your API key from: https://hunter.io/api-keys
HUNTER_API_KEY=

# Apollo.io API Key
# Get your API key from: https://app.apollo.io/#/settings/integrations/api
APOLLO_API_KEY=

# RocketReach API Key
# Get your API key from: https://rocketreach.co/api
ROCKETREACH_API_KEY=

# Contact enrichment cache TTL (milliseconds, default: 7 days)
CONTACT_ENRICHMENT_CACHE_TTL_MS=604800000

# ============================================
# Cold Email Platform APIs
# ============================================
# Instantly.ai API Key
# Get your API key from: https://instantly.ai/app/settings/api
INSTANTLY_API_KEY=

# Smartlead.ai API Key
# Get your API key from: https://app.smartlead.ai/settings/api
SMARTLEAD_API_KEY=

# ============================================
# OpenAI (for Personalization)
# ============================================
# OpenAI API Key for email personalization
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI model for personalization (default: gpt-4o-mini)
OPENAI_PERSONALIZATION_MODEL=gpt-4o-mini

# OpenAI temperature for personalization (0-2, default: 0.7)
OPENAI_PERSONALIZATION_TEMPERATURE=0.7

# ============================================
# Scraping Queue Configuration
# ============================================
# Maximum concurrent scraping operations
MAX_CONCURRENT_SCRAPES=10

# Default rate limit (requests per minute per domain)
DEFAULT_RATE_LIMIT=60

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=60000  # 1 minute

# Default retry attempts for failed scrapes
DEFAULT_SCRAPE_RETRIES=3

# ============================================
# Lead Scoring Configuration
# ============================================
# Scoring weights (must sum to ~1.0 for proper normalization)
LEAD_SCORE_WEIGHT_HIRING_VELOCITY=0.3
LEAD_SCORE_WEIGHT_SENIORITY_MIX=0.2
LEAD_SCORE_WEIGHT_TECH_STACK=0.2
LEAD_SCORE_WEIGHT_DEPARTMENT=0.15
LEAD_SCORE_WEIGHT_COMPANY_GROWTH=0.15

# Hiring velocity thresholds (number of jobs)
LEAD_SCORE_HIRING_HIGH_THRESHOLD=10
LEAD_SCORE_HIRING_MEDIUM_THRESHOLD=5
LEAD_SCORE_HIRING_LOW_THRESHOLD=2
LEAD_SCORE_HIRING_MINIMAL_THRESHOLD=1

# Hiring velocity scores (0-1)
LEAD_SCORE_HIRING_HIGH_SCORE=1.0
LEAD_SCORE_HIRING_MEDIUM_SCORE=0.7
LEAD_SCORE_HIRING_LOW_SCORE=0.4
LEAD_SCORE_HIRING_MINIMAL_SCORE=0.2
LEAD_SCORE_HIRING_OLD_SCORE=0.1

# Company growth thresholds
LEAD_SCORE_HEADCOUNT_LARGE=500
LEAD_SCORE_HEADCOUNT_MEDIUM=100
LEAD_SCORE_HEADCOUNT_SMALL=50
LEAD_SCORE_JOBS_HIGH=10
LEAD_SCORE_JOBS_MEDIUM=5

# Company growth scores (0-1)
LEAD_SCORE_HEADCOUNT_LARGE_SCORE=0.3
LEAD_SCORE_HEADCOUNT_MEDIUM_SCORE=0.2
LEAD_SCORE_HEADCOUNT_SMALL_SCORE=0.1
LEAD_SCORE_JOBS_HIGH_SCORE=0.3
LEAD_SCORE_JOBS_MEDIUM_SCORE=0.2
LEAD_SCORE_JOBS_LOW_SCORE=0.1

# Funding stage scores (0-1)
LEAD_SCORE_FUNDING_SERIES_C=0.4
LEAD_SCORE_FUNDING_SERIES_B=0.3
LEAD_SCORE_FUNDING_SERIES_A=0.2
LEAD_SCORE_FUNDING_SEED=0.1

# Time windows (days)
LEAD_SCORE_RECENT_DAYS=30
LEAD_SCORE_OLD_DAYS=60

# ============================================
# Boundary Enforcement Configuration
# ============================================
# Auto-throttling limits
BOUNDARY_MAX_PER_MINUTE=10
BOUNDARY_MAX_PER_HOUR=100
BOUNDARY_THROTTLE_MINUTES=30
BOUNDARY_GRACE_PERIOD=2

# Auto-pause limits
BOUNDARY_MAX_FAILURES_PER_HOUR=5
BOUNDARY_MAX_CONSECUTIVE_FAILURES=3

# Auto-disable limits
BOUNDARY_MAX_PAUSE_COUNT=3
BOUNDARY_DISABLE_HOURS=24

# Bypass configuration (comma-separated)
BOUNDARY_BYPASS_USERS=admin-user
BOUNDARY_BYPASS_PLANS=enterprise
