# EasyFlow Environment Configuration Template
# Copy this to .env and replace with your actual values

# Application Configuration
PORT=3030
NODE_ENV=development
APP_URL=https://your-app-url.com/

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE=your-supabase-service-role-key
SUPABASE_BUCKET=your-bucket-name
SUPABASE_PASSWORD=your-database-password
SUPABASE_USE_SIGNED_URLS=true
SUPABASE_SIGNED_URL_EXPIRES=86400
SUPABASE_JWT=your-jwt-secret
POSTGRES_URL=postgresql://postgres:[password]@db.your-project-id.supabase.co:5432/postgres

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com/

# API Keys and Secrets
API_KEY=your-api-key-32-characters-or-more
ADMIN_API_SECRET=your-admin-secret-64-characters-or-more
AUTOMATION_API_KEY=your-automation-api-key
SESSION_SECRET=your-session-secret-32-characters-or-more
CREDENTIAL_ENCRYPTION_KEY=your-encryption-key-32-characters-or-more

# External Services
DUCK_TOKEN=your-duckdns-token
POLAR_API_KEY=your-polar-api-key
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret
HUBSPOT_API_KEY=your-hubspot-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-verified-sender-email
SENDGRID_FROM_NAME=Your App Name
UCHAT_API_KEY=your-uchat-api-key

# Email Configuration
SEND_EMAIL_WEBHOOK=http://backend:3030/api/send-email-now
SEND_EMAIL_WEBHOOK_SECRET=your-webhook-secret
BACKEND_URL=http://localhost:3030/api/email-webhook

# Frontend Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-app-url.com,http://127.0.0.1:3000
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX
MEASUREMENT_ID=G-XXXXXXXXXX

# Automation Services
AUTOMATION_URL=http://localhost:7000