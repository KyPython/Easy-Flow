{
  "id": null,
  "title": "EasyFlow - Application Overview",
  "tags": [
    "easyflow",
    "overview",
    "staging"
  ],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "hideControls": false,
  "graphTooltip": 0,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ],
    "time_options": [
      "5m",
      "15m",
      "1h",
      "6h",
      "12h",
      "24h",
      "2d",
      "7d",
      "30d"
    ]
  },
  "refresh": "30s",
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Application Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"easyflow-backend\"}",
          "legendFormat": "Backend Status",
          "refId": "A"
        },
        {
          "expr": "up{job=\"easyflow-automation\"}",
          "legendFormat": "Automation Status",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 2,
      "title": "HTTP Request Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"easyflow-backend\"}[5m])",
          "legendFormat": "{{ method }} {{ status }}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 6,
        "y": 0
      },
      "yAxes": [
        {
          "label": "Requests/sec",
          "show": true
        },
        {
          "show": true
        }
      ],
      "xAxis": {
        "show": true
      },
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                100
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "5m",
        "frequency": "10s",
        "handler": 1,
        "name": "High Request Rate Alert",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "id": 3,
      "title": "Response Time Distribution",
      "type": "heatmap",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"easyflow-backend\"}[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"easyflow-backend\"}[5m]))",
          "legendFormat": "50th percentile",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "heatmap": {
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true,
          "label": "Response Time (ms)",
          "logBase": 1,
          "max": null,
          "min": null
        },
        "yBucketBound": "auto"
      }
    },
    {
      "id": 4,
      "title": "Error Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"easyflow-backend\",status=~\"4..|5..\"}[5m]) / rate(http_requests_total{job=\"easyflow-backend\"}[5m]) * 100",
          "legendFormat": "Error Rate %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 4
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "Active Tasks",
      "type": "stat",
      "targets": [
        {
          "expr": "easyflow_active_tasks_total",
          "legendFormat": "Active Tasks",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 6,
      "title": "Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"easyflow-backend\"}",
          "legendFormat": "Backend Memory",
          "refId": "A"
        },
        {
          "expr": "process_resident_memory_bytes{job=\"easyflow-automation\"}",
          "legendFormat": "Automation Memory",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 6,
        "y": 8
      },
      "yAxes": [
        {
          "label": "Bytes",
          "show": true
        },
        {
          "show": true
        }
      ]
    },
    {
      "id": 7,
      "title": "Database Connection Pool",
      "type": "graph",
      "targets": [
        {
          "expr": "database_connections_active",
          "legendFormat": "Active Connections",
          "refId": "A"
        },
        {
          "expr": "database_connections_idle",
          "legendFormat": "Idle Connections",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 8
      },
      "yAxes": [
        {
          "label": "Connections",
          "show": true
        },
        {
          "show": true
        }
      ]
    },
    {
      "id": 8,
      "title": "Top API Endpoints by Request Count",
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{job=\"easyflow-backend\"}[5m])))",
          "legendFormat": "{{ endpoint }}",
          "refId": "A",
          "format": "table"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "styles": [
        {
          "alias": "Endpoint",
          "align": "auto",
          "colorMode": null,
          "colors": [
            "rgba(245, 54, 54, 0.9)",
            "rgba(237, 129, 40, 0.89)",
            "rgba(50, 172, 45, 0.97)"
          ],
          "dateFormat": "YYYY-MM-DD HH:mm:ss",
          "decimals": 2,
          "mappingType": 1,
          "pattern": "endpoint",
          "thresholds": [],
          "type": "string",
          "unit": "short"
        },
        {
          "alias": "Requests/sec",
          "align": "auto",
          "colorMode": "value",
          "colors": [
            "rgba(50, 172, 45, 0.97)",
            "rgba(237, 129, 40, 0.89)",
            "rgba(245, 54, 54, 0.9)"
          ],
          "dateFormat": "YYYY-MM-DD HH:mm:ss",
          "decimals": 2,
          "mappingType": 1,
          "pattern": "Value",
          "thresholds": [
            "1",
            "10"
          ],
          "type": "number",
          "unit": "reqps"
        }
      ]
    },
    {
      "id": 9,
      "title": "Email Queue Status",
      "type": "stat",
      "targets": [
        {
          "expr": "easyflow_email_queue_pending",
          "legendFormat": "Pending Emails",
          "refId": "A"
        },
        {
          "expr": "easyflow_email_queue_failed",
          "legendFormat": "Failed Emails",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Failed Emails"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      }
    }
  ],
  "templating": {
    "list": [
      {
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "datasource": "Prometheus",
        "definition": "label_values(up{job=~\"easyflow.*\"}, instance)",
        "hide": 0,
        "includeAll": true,
        "label": "Instance",
        "multi": true,
        "name": "instance",
        "options": [],
        "query": "label_values(up{job=~\"easyflow.*\"}, instance)",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 0,
        "tagValuesQuery": "",
        "tags": [],
        "tagsQuery": "",
        "type": "query",
        "useTags": false
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "schemaVersion": 27,
  "links": []
}
