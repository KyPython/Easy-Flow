{
  "id": null,
  "uid": "code-quality",
  "title": "ðŸ“Š EasyFlow - Code Quality Dashboard",
  "description": "Monitor code quality metrics: total issues, severity breakdown, and trends over time",
  "tags": ["code-quality", "observability", "easyflow"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5m",
  "editable": true,
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Code Quality Issues",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "easyflow_code_quality_total_issues",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "red"}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "Files Scanned",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "easyflow_code_quality_total_files",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "High Severity Issues",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "easyflow_code_quality_issues_by_severity{severity=\"high\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "red"}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Medium Severity Issues",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "easyflow_code_quality_issues_by_severity{severity=\"medium\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 5, "color": "yellow"},
              {"value": 20, "color": "red"}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 5,
      "title": "Low Severity Issues",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0},
      "targets": [
        {
          "expr": "easyflow_code_quality_issues_by_severity{severity=\"low\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "orange"}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 6,
      "title": "Issues by Severity Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "easyflow_code_quality_issues_by_severity",
          "legendFormat": "{{severity}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {"type": "linear"},
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 7,
      "title": "Total Issues Trend",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "easyflow_code_quality_total_issues",
          "legendFormat": "Total Issues",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {"type": "linear"},
            "showPoints": "never",
            "spanNulls": false
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "red"}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 8,
      "title": "Last Scan Time",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "easyflow_code_quality_last_scan",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          },
          "unit": "s",
          "custom": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      "options": {
        "textMode": "value_and_name",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "transformations": [
        {
          "id": "convertFieldType",
          "options": {
            "conversions": [
              {
                "destinationType": "time",
                "targetField": "Time"
              }
            ]
          }
        }
      ]
    },
    {
      "id": 9,
      "title": "Severity Breakdown",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
      "targets": [
        {
          "expr": "easyflow_code_quality_issues_by_severity",
          "legendFormat": "{{severity}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value"]
        }
      }
    }
  ]
}

